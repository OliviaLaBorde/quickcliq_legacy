<Window x:Class="QC.net.OptionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Options - Quick Cliq" 
        Height="650" Width="900"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="24,16">
            <StackPanel Orientation="Horizontal">
                <materialDesign:PackIcon Kind="Settings" 
                                        Width="32" Height="32" 
                                        VerticalAlignment="Center"
                                        Margin="0,0,16,0"/>
                <TextBlock Text="Quick Cliq Settings" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:ColorZone>
        
        <!-- Main Content with Tabs -->
        <TabControl Grid.Row="1" 
                    Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                    Margin="0">
            
            <!-- General Tab -->
            <TabItem Header="General">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <GroupBox Header="Editor" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkEditorItem" Content="Show 'Open Editor' in menu" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Tray Icon" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkTrayIcon" Content="Show tray icon" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Command Execution" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Delay between commands (ms):"/>
                                <TextBox Name="txtCmdDelay" Width="100" HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="System" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkRunOnStartup" Content="Run on Windows startup" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Appearance Tab -->
            <TabItem Header="Appearance">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <GroupBox Header="Menu Appearance" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Icon size (pixels):"/>
                                <TextBox Name="txtIconSize" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                                
                                <CheckBox Name="chkLightMenu" Content="Light menu (no custom colors)" Margin="0,5"/>
                                <CheckBox Name="chkIconsOnly" Content="Icons only (no text)" Margin="0,5"/>
                                
                                <Label Content="Height adjustment (pixels):"/>
                                <TextBox Name="txtHeightAdjust" Width="100" HorizontalAlignment="Left" Margin="0,0,0,10"/>
                                
                                <Label Content="Font:"/>
                                <ComboBox Name="cmbFont" Width="200" HorizontalAlignment="Left" Margin="0,0,0,10">
                                    <ComboBoxItem Content="Segoe UI" IsSelected="True"/>
                                    <ComboBoxItem Content="Arial"/>
                                    <ComboBoxItem Content="Calibri"/>
                                    <ComboBoxItem Content="Tahoma"/>
                                    <ComboBoxItem Content="Verdana"/>
                                </ComboBox>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Hotkeys Tab -->
            <TabItem Header="Hotkeys">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <GroupBox Header="Main Hotkey" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <Label Content="Main hotkey to open menu:"/>
                                <TextBox Name="txtMainHotkey" Width="150" HorizontalAlignment="Left"/>
                                <TextBlock TextWrapping="Wrap" 
                                         Foreground="Gray" 
                                         FontSize="11"
                                         Margin="0,5,0,0">
                                    <Run Text="Format: ^ = Ctrl, ! = Alt, + = Shift, # = Win"/>
                                    <LineBreak/>
                                    <Run Text="Example: ^!Z = Ctrl+Alt+Z"/>
                                </TextBlock>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Suspend" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkSuspendSub" Content="Show suspend items in menu" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- Features Tab -->
            <TabItem Header="Features">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15">
                        <TextBlock Text="Enable or disable optional features:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"/>
                        
                        <GroupBox Header="Clips (Clipboard Manager)" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkClipsOn" Content="Enable Clips" Margin="0,5"/>
                                <CheckBox Name="chkClipsSub" Content="Show in submenu" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Wins (Window Manager)" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkWinsOn" Content="Enable Wins" Margin="0,5"/>
                                <CheckBox Name="chkWinsSub" Content="Show in submenu" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Memos (Quick Notes)" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkMemosOn" Content="Enable Memos" Margin="0,5"/>
                                <CheckBox Name="chkMemosSub" Content="Show in submenu" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                        
                        <GroupBox Header="Recent Items" Margin="0,0,0,15">
                            <StackPanel Margin="10">
                                <CheckBox Name="chkRecentOn" Content="Enable Recent" Margin="0,5"/>
                                <CheckBox Name="chkRecentSub" Content="Show in submenu" Margin="0,5"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            
            <!-- About Tab -->
            <TabItem Header="About">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="15" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Quick Cliq" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
                        <TextBlock Name="txtVersion" Text="Version 3.0.0" FontSize="14" HorizontalAlignment="Center" Margin="0,5"/>
                        <TextBlock Text="Modernized .NET 10 rewrite" HorizontalAlignment="Center" Margin="0,5"/>
                        <TextBlock TextWrapping="Wrap" 
                                   TextAlignment="Center"
                                   Margin="0,20,0,0"
                                   Foreground="Gray">
                            <Run Text="A powerful launcher and automation tool"/>
                            <LineBreak/>
                            <Run Text="Originally created in AutoHotkey"/>
                            <LineBreak/>
                            <Run Text="Now blazing fast with .NET"/>
                        </TextBlock>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
        
        <!-- Buttons -->
        <materialDesign:ColorZone Grid.Row="2" Mode="PrimaryLight" Padding="24,16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Name="btnOK" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="110" Height="40"
                        IsDefault="True" 
                        Click="OK_Click" 
                        Margin="0,0,12,0">
                    <TextBlock Text="OK" FontSize="14" FontWeight="SemiBold"/>
                </Button>
                <Button Name="btnApply" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="110" Height="40"
                        Click="Apply_Click" 
                        Margin="0,0,12,0">
                    <TextBlock Text="Apply" FontSize="14"/>
                </Button>
                <Button Name="btnCancel" 
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="110" Height="40"
                        IsCancel="True" 
                        Click="Cancel_Click">
                    <TextBlock Text="Cancel" FontSize="14"/>
                </Button>
            </StackPanel>
        </materialDesign:ColorZone>
    </Grid>
</Window>
