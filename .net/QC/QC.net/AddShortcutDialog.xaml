<Window x:Class="QC.net.AddShortcutDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Add Shortcut - Quick Cliq" 
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}">
    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Add New Shortcut" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,24"/>
        
        <!-- Form -->
        <StackPanel Grid.Row="1">
            <TextBox Name="txtName" 
                     materialDesign:HintAssist.Hint="Name"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     FontSize="14"
                     Margin="0,0,0,20"/>
            
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Name="txtCommand" 
                         Grid.Column="0"
                         materialDesign:HintAssist.Hint="Command or Path"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="14"/>
                
                <Button Grid.Column="1"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Margin="12,0,0,0"
                        Click="Browse_Click">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FolderOpen" Margin="0,0,8,0"/>
                        <TextBlock Text="Browse"/>
                    </StackPanel>
                </Button>
            </Grid>
            
            <materialDesign:Card Background="{DynamicResource MaterialDesignToolBarBackground}" 
                                Padding="16"
                                UniformCornerRadius="8">
                <StackPanel>
                    <TextBlock Text="ðŸ’¡ Quick Tips" 
                              FontWeight="SemiBold" 
                              Margin="0,0,0,8"/>
                    <TextBlock TextWrapping="Wrap" 
                             Opacity="0.8"
                             FontSize="12"
                             LineHeight="18">
                        <Run Text="â€¢ Enter a file path, URL, or special command"/>
                        <LineBreak/>
                        <Run Text="â€¢ Browse to select executables or folders"/>
                        <LineBreak/>
                        <Run Text="â€¢ Icon will be auto-detected from the file"/>
                    </TextBlock>
                </StackPanel>
            </materialDesign:Card>
        </StackPanel>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="0,24,0,0">
            <Button Style="{StaticResource MaterialDesignRaisedButton}" 
                    Width="100" 
                    Height="36"
                    IsDefault="True" 
                    Click="OK_Click" 
                    Margin="0,0,12,0">
                <TextBlock Text="OK" FontSize="13"/>
            </Button>
            <Button Style="{StaticResource MaterialDesignOutlinedButton}" 
                    Width="100"
                    Height="36"
                    IsCancel="True" 
                    Click="Cancel_Click">
                <TextBlock Text="Cancel" FontSize="13"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
