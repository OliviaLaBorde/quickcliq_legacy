<Window x:Class="QC.net.IconPickerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Choose Icon"
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        ResizeMode="CanResize">
    
    <Window.Resources>
        <Style x:Key="IconButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Width" Value="60"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="4"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="EmojiButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Width" Value="48"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Preview Section -->
        <Grid Grid.Row="0" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    Name="previewBorder"
                    Width="48" Height="48"
                    Background="{DynamicResource MaterialDesignCardBackground}"
                    BorderBrush="{DynamicResource MaterialDesignDivider}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Margin="0,0,16,0">
                <ContentControl Name="previewContent" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
            </Border>
            
            <TextBox Grid.Column="1"
                     Name="txtSelectedIcon"
                     materialDesign:HintAssist.Hint="Selected icon"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     IsReadOnly="True"
                     VerticalAlignment="Center"/>
        </Grid>
        
        <!-- Tabs -->
        <TabControl Grid.Row="1" 
                    Name="tabControl"
                    Style="{StaticResource MaterialDesignFilledTabControl}">
            
            <!-- Material Design Tab -->
            <TabItem Header="Material Design">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Search Box -->
                    <TextBox Grid.Row="0"
                             Name="txtMaterialSearch"
                             materialDesign:HintAssist.Hint="Search for an icon (e.g., home, settings, folder)..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             FontSize="14"
                             Margin="0,0,0,8"
                             TextChanged="MaterialSearch_TextChanged">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Escape" Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <!-- Result count -->
                    <TextBlock Grid.Row="1"
                              Name="txtMaterialResultCount"
                              FontSize="12"
                              Opacity="0.6"
                              Margin="0,0,0,12"
                              Text="Type to search 1000+ Material Design icons"/>
                    
                    <!-- Results Grid (limited to 50 icons) -->
                    <ScrollViewer Grid.Row="2" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <WrapPanel Name="materialIconsPanel" 
                                  Orientation="Horizontal"
                                  HorizontalAlignment="Center"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- Emoji Tab -->
            <TabItem Header="Emoji">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                        <ComboBox Name="cmbEmojiCategory"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                 Width="220"
                                 SelectionChanged="EmojiCategory_Changed">
                            <ComboBoxItem Content="ðŸ˜€ Smileys &amp; Emotion" Tag="smileys" IsSelected="True"/>
                            <ComboBoxItem Content="ðŸ‘¥ People &amp; Body" Tag="people"/>
                            <ComboBoxItem Content="ðŸ¶ Animals &amp; Nature" Tag="animals"/>
                            <ComboBoxItem Content="ðŸ• Food &amp; Drink" Tag="food"/>
                            <ComboBoxItem Content="âš½ Activities &amp; Sports" Tag="activities"/>
                            <ComboBoxItem Content="âœˆï¸ Travel &amp; Places" Tag="travel"/>
                            <ComboBoxItem Content="ðŸ’¡ Objects" Tag="objects"/>
                            <ComboBoxItem Content="ðŸ”£ Symbols" Tag="symbols"/>
                            <ComboBoxItem Content="ðŸ Flags" Tag="flags"/>
                        </ComboBox>
                    </StackPanel>
                    
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <WrapPanel Name="emojiPanel" 
                                  Orientation="Horizontal"/>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            
            <!-- File Tab -->
            <TabItem Header="File">
                <Grid Margin="0,16,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <Button Grid.Row="0"
                            Name="btnBrowseFile"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="42"
                            Click="BrowseFile_Click"
                            HorizontalAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="FolderOpen" 
                                                    VerticalAlignment="Center" 
                                                    Margin="0,0,8,0"/>
                            <TextBlock Text="Browse for icon file..." 
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    
                    <StackPanel Grid.Row="1" 
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0,32,0,0">
                        <materialDesign:PackIcon Kind="ImageOutline" 
                                                Width="64" Height="64"
                                                Opacity="0.3"/>
                        <TextBlock Text="Click 'Browse for icon file...' to select" 
                                  TextAlignment="Center"
                                  Opacity="0.6"
                                  Margin="0,16,0,0"/>
                        <TextBlock Text="Supported: .ico, .png, .jpg, .bmp" 
                                  TextAlignment="Center"
                                  Opacity="0.4"
                                  FontSize="12"
                                  Margin="0,8,0,0"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,16,0,0">
            <Button Name="btnClear"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="Clear"
                    Width="100"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="Clear_Click"/>
            <Button Name="btnCancel"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Content="Cancel"
                    Width="100"
                    Height="36"
                    Margin="0,0,8,0"
                    Click="Cancel_Click"/>
            <Button Name="btnOK"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Content="OK"
                    Width="100"
                    Height="36"
                    Click="OK_Click"
                    IsEnabled="False"/>
        </StackPanel>
    </Grid>
</Window>
